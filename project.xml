    <resources>
     <resource>
      <directory>src/org/paneris</directory>
      <includes>
       <include>**/*.wm</include>
      </includes>
     </resource>
     <resource>
      <directory>etc/properties/</directory>
      <includes>
       <include>**/*.properties</include>
       <include>**/*.wm</include>
      </includes>
     </resource>
     <resource>
